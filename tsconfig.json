{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "target": "es6",
        "outDir": "dist",
        "rootDir": "src",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ]
}